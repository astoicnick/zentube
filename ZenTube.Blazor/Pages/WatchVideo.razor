@page "/WatchVideo/{Video}"
@using ZenTube.Models;

    <div class="row" style="border: 2px solid blue;">
        <div class="col-lg-9">
            <div style="text-align: center;">
                <h6>@Video.Title</h6>
                <p>@Video.Description</p>
                <hr />
                <p>Uploaded on: @Video.PublishedAt.GetValueOrDefault().Date</p>
            </div>
        </div>
        <div class="col-lg-3">
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#@Video.VideoId">
        Watch
    </button>
    <div class="modal fade" id="@Video.VideoId" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
            <iframe src="https://www.youtube.com/embed/@Video.VideoId" height="480" width="640"></iframe>
                </div>
            </div>
        </div>
    </div>
        </div>
    </div>
@code {
    [Parameter]
    public SearchResultModel Video { get; set; }
}
